
<div class="container">


  <div class="row justify-content-center m-5">
  <h1 class="text-center col-12">Restaurants</h1>
      <% @restaurants.each do |restaurant| %>
        <div class="card col-md-5 m-2 p-2">
          <div class="card-body">
            <h2 class="card-title"> <%= restaurant.name %> </h2>
            <p class="card-text"> <%= restaurant.category %> </p>
          </div>

          <ul class="list-group list-group-flush">
            <li class="list-group-item"> <%= restaurant.address %> </li>
            <li class="list-group-item"> <%= restaurant.phone_number %> </li>
          </ul>

          <div class="card-body d-inline-flex p-2 bd-highlight justify-content-around">
            <%= link_to "See details", restaurant_path(restaurant), class: "btn btn-primary m-2"%>
          </div>
        </div>
      <% end %>
        <div class="col-md-5 m-5">
          <%= link_to 'Create', new_restaurant_path(@restaurant), class: "btn btn-primary", style: "width: 100%" %>
        </div>
  </div>


</div>

