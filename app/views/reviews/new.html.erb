<div class="container">

  <div class="card p-5 m-5" id="review-form">
    <h1>Leave a review</h1>
    <%= simple_form_for [ @restaurant, @review ] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating %>
      <%= f.submit "Submit review", class: "btn btn-primary" %>
      <%= link_to 'Back', restaurants_path, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
